		}
	}, {
		header : "设备名称",
		dataIndex : "equipment",
		renderer : function(n) {
			return n.equipSpecificName;
		}
	}, {
		header : "规格型号",
		dataIndex : "equipment",
		renderer : function(n) {
			return n.equipVender;
		}
	}, {
		header : "出厂编号",
		dataIndex : "equipment",
		renderer : function(n) {
			return n.exwSerial;
		}
	}, {
		header : "设备自编号",
		dataIndex : "equipment",
		renderer : function(n) {
			return n.equipSerial;
		}
	}, {
		header : "设备价值",
		dataIndex : "equipWorth",
		editor : new Ext.form.TextField({
			allowBlank : false,
			maxLength : 32
		})
	}, {
		header : "保险种类",
		dataIndex : "insuranceCategory",
//		editor : new Ext.ux.form.LovCombo({
//	        hideOnSelect : false,
//	        editable : false,
//			store : new Ext.data.Store({
//				id : 0,
