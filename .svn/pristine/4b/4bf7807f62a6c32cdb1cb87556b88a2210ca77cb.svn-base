#navigations {
    background-color: #fff;
    text-shadow: #fff 0 1px 0;
}

#navigations ul {
    position: relative;
    display: block;
    height: auto;
    font-size: 14px;
}

#navigations ul li img {
    margin-bottom: 10px;
}

#navigations ul li {
    float: left;
    padding: 0px;
    margin: 0px;
/*    margin: 10px 0 0 25px;*/
    text-align: center;
    line-height: 1.25em;
    color: #333;
    font-family: "Helvetica Neue",sans-serif;
    height: 113px;
    width: 80px;
    overflow: hidden;
    cursor: pointer;
}

#navigations ul li.navigation-hover {
    background-color: #eee;
}

#navigations ul li.x-view-selected {
	padding: 8px 17px 10px 10px;
    background-color: rgba(100, 100, 100, .15);
	border: 1px solid #6593cf;
	border-radius : 5px;
	margin: 4px;
}

#navigations li strong {
    color: #000;
    display: block;
}

#navigations li span {
    color: #999;
}
