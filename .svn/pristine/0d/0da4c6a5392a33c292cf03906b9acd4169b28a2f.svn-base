.ux-action-col-cell .x-grid3-cell-inner {
	padding: 1px 0 0 0;
}

.ux-action-col-item {
	float: left;
	min-width: 16px;
	height: 16px;
	background-repeat: no-repeat;
	margin: 0 3px 0 2px;
	cursor: pointer;
	overflow: hidden;
}

.ext-ie .ux-action-col-item {
	width: 16px;
}

.ext-ie .ux-action-col-text {
	width: auto;
}

.ux-action-col-item span {
	vertical-align: middle;
	padding: 0 0 0 18px;
	line-height: 18px;
}

.ext-ie .ux-action-col-item span {
	width: auto;
}