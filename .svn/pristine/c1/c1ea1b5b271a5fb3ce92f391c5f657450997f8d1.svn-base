body {
	font-size:14px;
	font-family: "Microsoft YaHei";
	color:#333333;
	margin:0 auto;
	background-color:#FFFFFF;
   }

div,table,select,input,textarea,form,p,h1,h2,h3,h4,h5,fieldset,p{padding:0; margin:0;}
img{ border:0; padding:0; margin:0}

a{ text-decoration:none;}
a:link, a:visited{ color:#333;}
a:hover{ color:#FF6D00; text-decoration:underline;}	


.login_main{width:856px;margin:0 auto;}

.top_box{ width:100%; height:79px; margin-top:41px; float:left;}
.top_title{ width:564px; height:79px; float:left;}
.top_title_right{ width:224px; height:79px; float:left;}

.login_bg{ width:100%; height:433px;float:left; background-image:url(../images/zt_bg.jpg); background-repeat:repeat-x;}

.login_maintu{ float:left; width:469px; height:433px; background-image:url(../images/zt_maintu.jpg); background-repeat:no-repeat;}

.login_main_right{ float:left; width:387px; height:433px; background-image:url(../images/zt_main_right.jpg); background-repeat:no-repeat;}

.login_table_box{ float:left; width:286px; padding-top:102px; padding-left:60px;}

.login_table_box input{width: 190px; height:28px; line-height:28px;border:1px solid #ffffff; color:#9B9B9B; font-size:14px;}

.code_box{ float:left; width:120px; padding:10px 6px; text-align:center;}

.code_word{ font-size:14px; color:#FF6500;}

.bottom_box{width:100%; height:50px; float:left;}

.bottom_word{ float:left;width: 90%; padding-left:40px; font-size:13px; color:#787878; font-family: "Microsoft YaHei";  height:50px; line-height:50px;}

.bottom_word img{ vertical-align:middle;}

.bottom_word span{ vertical-align:middle;}