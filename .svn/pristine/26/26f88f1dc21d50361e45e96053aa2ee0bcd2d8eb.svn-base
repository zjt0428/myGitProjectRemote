@charset "UTF-8";
*{
    margin: 0;
    padding: 0;
    text-decoration: none;
    font-family: 'Microsoft YaHei',Arial,sans-serif;
}

.zicon-sprite, .zicon-contact, .zicon-help, .zicon-home, .zicon-memo, .zicon-online, .zicon-quit, .zicon-set {
    background: url('../img/index/zicon.png') no-repeat;
}

.zicon-contact {
    background-position: 0 0;
    height: 24px;
    width: 24px;
}

.zicon-help {
    background-position: 0 -24px;
    height: 22px;
    width: 22px;
}

.zicon-home {
    background-position: 0 -46px;
    height: 20px;
    width: 22px;
}

.zicon-memo {
    background-position: 0 -66px;
    height: 20px;
    width: 20px;
}

.zicon-online {
    background-position: 0 -86px;
    height: 20px;
    width: 19px;
}

.zicon-quit {
    background-position: 0 -106px;
    height: 21px;
    width: 20px;
}

.zicon-set {
    background-position: 0 -127px;
    height: 20px;
    width: 22px;
}

.header{
    height: 76px;
    background: #0174e6;
    color: #fff;
    line-height: 76px;
}

.header .name{
    float: left;
    margin-left: 10px;
    font-size: 24px;
    height: 80px;
}

.header .userMsg{
    float: right;
    margin-right: 20px;
    padding: 13px 20px;
    width: 140px;
    height: 50px;
    line-height: 50px;
    color: #fff;
    font-size: 16px;
}

.header .userMsg:hover{
    background: #2b7ff0;
}

.header .imgBox{
    float: left;
    border-radius: 50px;
    -webkit-border-radius: 50px;
    border: solid 2px #fff;
    width: 46px;
    height: 46px;
    overflow: hidden;
}

.header .imgBox img{
    border: none;
    width: 100%;
    height: 100%;
}

.header .userName{
    float: left;
    margin-left: 8px;
    width: 82px;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.header .nav{
    float: right;
}

.header .twig{
    float: left;
    padding: 0 10px;
    height: 76px;
    line-height: 76px;
    color: #fff;
    font-size: 16px;
}

.header .twig:hover{
    background: #2b7ff0;
}

.header .icon{
    float: left;
    position: relative;
    top: 28px;
}

.header .zicon-home{
    top: 27px;
}

.header .zicon-help{
    top: 27px;
}

.header .zicon-contact{
    top: 25px;
}

.header .text{
    margin-left: 9px;
    float: left;
}

.footer{
    height: 58px;
    background: #56c0ff;
    line-height: 58px;
    color: #fff;
    font-size: 14px;
}

.footer .nav{
    float: left;
}

.footer .twig{
    float: left;
    padding: 0 40px;
    color: #fff;
}

.footer .twig:hover{
    background: #2b7ff0;
}

.footer .icon{
    position: relative;
    top: 20px;
    float: left;
}

.footer .text{
    margin-left: 8px;
    float: left;
}

.footer .msg{
    float: right;
    margin-right: 20px;
}

.footer .link{
    color: #fffc00;
}

.footer .link:hover{
    text-decoration: underline;
}
.bureau{
    font-size: 20px;
    letter-spacing: 2px;
}