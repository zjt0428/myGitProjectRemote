/*待办事项二级页*/
.zt_db_box{ width:98%; float:left; margin:20px;}

.zt_db_titlebg{ float:left; width:98%;height:40px; margin-left:8px; }

	
.zt_db_title_word{ float:left; width:146px; font-size:18px; font-family: "Microsoft YaHei"; color:#2577D4; line-height:40px; text-indent:6px;}

.zt_db_title_right{ float:right; width:120px; font-size:14px; font-family: "Microsoft YaHei"; color:#a1a1a1; line-height:40px; text-align:right; padding-right:15px; }


.zt_db_box li{
    float:left; 
	width:48%;
	border:1px solid #E4E4E4;
	background-color:#FFFFFF;
	margin-right:20px;
	margin-bottom:20px;
	height:235px;}


.zt_list_table_box{width:98%; margin:0 auto; }

.zt_list{
	width:100%;
	border-bottom:1px solid #DEDEDE;
	border-left:1px solid #DEDEDE;	
	font-size:14px;}
		
.zt_list th{
	border-top:1px solid #DEDEDE;
	border-right:1px solid #DEDEDE;
	background-color:#EBF3FA;
	height:30px;
	line-height:30px;
	padding:0px 3px;
	white-space: nowrap;/*文字不换行*/
	text-align:center;
	font-weight:bold;} 
	
.zt_list td{
	border-top:1px solid #DEDEDE;
	border-right:1px solid #DEDEDE;
	color:#222222;
	font-weight: normal;
	line-height:30px;
	padding:0px 3px;
	text-align:center;}
	

/*通知公告*/
.zt_new_table{ float:left; width:98%; margin-left:10px;margin-top:8px;line-height:30px;}
.zt_new_table td{line-height:30px;}	

.zt_new_table_long{
    float:left; 
    line-height:28px;
    text-overflow:ellipsis;
	white-space:nowrap;
	overflow:hidden;
    width: 92%;}


	
/*底部版权等*/
.zt_bottom_box{
	width:100%;
	height:31px; 
	line-height:31px;
	border-top:1px solid #D6D6D6;
	background-color:#E5E5E5;
	text-align:center; 
	font-size:13px;
	color:#6A6A6A; 
    position:fixed; 
	left:0;
	bottom:0;
	}
	
	
	
	
	
	