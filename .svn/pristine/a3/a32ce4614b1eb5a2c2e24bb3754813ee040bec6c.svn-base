body {
	margin: 0;
	padding: 0;
	background-color: #EEF2F6;
}

.login-icon {
	background: url(../img/login/login.png) no-repeat !important;
}

.btn-login {
	background: url(../img/login/blogin.png) no-repeat !important;
}

.btn-login-reset {
	background: url(../img/login/login-reset.png) no-repeat !important;
}

.text-lock {
	background: url('../img/login/lock.gif') no-repeat !important;
	padding: 2px 0 2px 18px;
}

.text-code {
	background: url('../img/login/code.gif') no-repeat !important;
	padding: 2px 0 2px 18px;
}

.text-user {
	background: url('../img/login/user.png') no-repeat !important;
	padding: 2px 0 2px 18px;
}